<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.aixm.delorean</groupId>
	<artifactId>delorean</artifactId>
	<version>1.0.0</version>
	<name>delorean</name>
	<url>http://www.example.com</url>
	<dependencies>
		<dependency>
			<groupId>jakarta.xml.bind</groupId>
			<artifactId>jakarta.xml.bind-api</artifactId>
			<version>4.0.2</version>
		</dependency>
		<!-- JAXB Implementation -->
		<!-- <dependency><groupId>org.glassfish.jaxb</groupId><artifactId>jaxb-runtime</artifactId><version>4.0.5</version></dependency> -->
		<!-- Other dependencies -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<!-- Build -->
	<build>
		<plugins>
			<!-- jaxb2-maven-plugin for JAXB code generation -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxb2-maven-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<id>xjc</id>
						<goals>
							<goal>xjc</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<xjbExcludeFilters>
						<filter implementation="org.codehaus.mojo.jaxb2.shared.filters.pattern.PatternFileFilter">
							<patterns>
								<pattern>\.txt</pattern>
								<pattern>\.xsd</pattern>
							</patterns>
						</filter>
					</xjbExcludeFilters>
					<sources>
						<source>model/aixm-5.1.1</source>
					</sources>
					<xjbSources>
						<xjbSource>model/aixm-5.1.1/bindings.xjb</xjbSource>
						<xjbSource>src/dataexchange/xjbs</xjbSource>
					</xjbSources>
					<packageName>com.aixm.delorean.core.schema.aixm_5_1_1</packageName>
					<outputDirectory>src/main/java</outputDirectory>
					<clearOutputDir>false</clearOutputDir>
				</configuration>
			</plugin>
			<!-- Maven Compiler Plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.13.0</version>
				<configuration>
					<source>11</source>
					<!-- Ensure compatibility with your JDK -->
					<target>11</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
